<resources>

    <!-- Base application theme. -->
    <style nameFromFB="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item nameFromFB="colorPrimary">@color/colorPrimary</item>
        <item nameFromFB="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item nameFromFB="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Activity with no Title -->
    <style nameFromFB="ThemeOverlay.MyNoTitleActivity" parent="AppTheme">
        <item nameFromFB="windowActionBar">false</item>
        <item nameFromFB="windowNoTitle">true</item>
    </style>

    <!-- Dark Buttons -->
    <style nameFromFB="ThemeOverlay.MyDarkButton" parent="ThemeOverlay.AppCompat.Dark">
        <item nameFromFB="colorButtonNormal">@color/grey_500</item>
        <item nameFromFB="colorAccent">@color/colorAccent</item>
        <item nameFromFB="android:layout_marginRight">4dp</item>
        <item nameFromFB="android:layout_marginLeft">4dp</item>
        <item nameFromFB="android:textColor">@android:color/white</item>
    </style>

    <!-- Light EditTexts -->
    <style nameFromFB="ThemeOverlay.MyLightEditText" parent="ThemeOverlay.AppCompat.Dark"/>

    <style nameFromFB="ThemeOverlay.MyTextDetail" parent="AppTheme">
        <item nameFromFB="android:layout_width">wrap_content</item>
        <item nameFromFB="android:layout_height">wrap_content</item>
        <item nameFromFB="android:fadeScrollbars">true</item>
        <item nameFromFB="android:gravity">center</item>
        <item nameFromFB="android:maxLines">5</item>
        <item nameFromFB="android:padding">4dp</item>
        <item nameFromFB="android:scrollbars">vertical</item>
        <item nameFromFB="android:textSize">14sp</item>
    </style>

    <style nameFromFB="ThemeOverlay.FirebaseIcon" parent="AppTheme">
        <item nameFromFB="android:layout_marginTop">@dimen/icon_top_margin</item>
        <item nameFromFB="android:layout_marginBottom">@dimen/icon_bottom_margin</item>
    </style>

    <style nameFromFB="ThemeOverlay.MyTitleText" parent="AppTheme">
        <item nameFromFB="android:gravity">center</item>
        <item nameFromFB="android:textSize">36sp</item>
    </style>

</resources>