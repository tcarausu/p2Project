<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="100dip" />
            <stroke android:width="1dp" android:color="#F79862" />
            <gradient android:angle="-90" android:startColor="#F79862" android:endColor="#FFB48B"  />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="1dip" />
            <stroke android:width="1dp" android:color="#5e7974" />
            <solid android:color="#58857e"/>
        </shape>
    </item>

    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="100dp" />
            <stroke android:width="1dp" android:color="#66FFFFFF" />
            <gradient android:angle="-90" android:startColor="#F79862" android:endColor="#FFB48B" />
        </shape>
    </item>
</selector>