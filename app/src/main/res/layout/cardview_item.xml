<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:layout_marginTop="2dp"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:id="@+id/cardview_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_selector_cardview_item"
        android:padding="10dp">

        <!--https://github.com/lopspower/CircularImageView-->
        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/imageViewID"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:civ_border="false"
            app:civ_border_color="@color/grey_500"
            app:civ_border_width="4dp"
            app:civ_shadow="false"
            app:civ_shadow_radius="10"
            app:civ_shadow_color="@android:color/darker_gray"
            />

        <TextView
            android:id="@+id/textView1ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@+id/imageViewID"
            android:hint="Line"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView1ID"
            android:layout_marginStart="24dp"
            android:layout_toEndOf="@+id/imageViewID"
            android:hint="SubLine"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView3ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView2ID"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:layout_toEndOf="@id/imageViewID"
            android:layout_marginStart="16dp"
            android:hint="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
            android:textSize="12sp"
            android:textColor="@android:color/black"
            />

        <ImageView
            android:id="@+id/imageViewDelete"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_show_more"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>