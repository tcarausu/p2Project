<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/relLayout1">
        <include layout="@layout/snippet_top_gallery_toolbar"/>
    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:fontFamily="@font/almendra"
        android:textColor="@color/orange"
        android:text="@string/choose_picture"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="30dp"
        android:drawableBottom="@mipmap/simo_design_camera"

        android:layout_marginRight="30dp"
        android:background="@drawable/input_fields_orange_borders"
        android:shadowRadius="5"
        android:shadowDx="5"
        android:shadowColor="@color/black"
        android:id="@+id/choose_pic_button"/>

    <ImageView
        android:id="@+id/imageView_gallery"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:layout_below="@id/choose_pic_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/chefood"
        android:layout_centerInParent="true"/>

</RelativeLayout>