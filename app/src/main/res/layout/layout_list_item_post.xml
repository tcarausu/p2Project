<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parentLayoutID"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <LinearLayout
        android:id="@+id/userProfilePicAndNameID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userProfilePicID"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/userNameID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="5dp"
            android:text="Here is the user name"
            android:textColor="@color/black"
            android:textSize="15sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/userProfilePicAndNameID">

        <TextView
            android:id="@+id/postDescriptionID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Description..."
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/options_menu"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_show_more" />
    </RelativeLayout>


    <com.example.myapplication.utility_classes.SquareImageView
        android:id="@+id/foodImgID"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_below="@+id/layout_description"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/bridge" />

    <LinearLayout
        android:id="@+id/postToolbarID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/foodImgID">

        <Button
            android:id="@+id/likes_not_pressed"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/post_like_not_pressed"
            android:text="Like"
            android:textColor="@color/colorAccentOnSignOut" />
        <!--<Button-->
        <!--android:id="@+id/likes_pressed"-->
        <!--style="@style/Widget.AppCompat.Button.Borderless"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_weight="1"-->
        <!--android:drawableTop="@drawable/post_like_pressed"-->
        <!--android:text="Like"-->
        <!--android:textColor="@color/colorAccentOnSignOut" />-->

        <Button
            android:id="@+id/commentsBtnID"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/post_comments"
            android:text="Comments"
            android:textColor="@color/colorAccentOnSignOut"
            android:textSize="11dp"
            />

        <Button
            android:id="@+id/recipeBtnID"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/post_recipe"
            android:text="Recipe"
            android:textColor="@color/colorAccentOnSignOut"
            android:textSize="11dp"
            />

        <Button
            android:id="@+id/ingredientsBtnID"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/post_ingredients"
            android:text="Ingredients"
            android:textColor="@color/colorAccentOnSignOut"
            android:textSize="10dp" />


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/time_Stamp_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/postToolbarID"
        >

        <TextView
            android:id="@+id/post_likes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Liked by whoever, eve, and 30 others"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/post_TimeStamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/post_likes"
            android:layout_marginTop="15dp"
            android:layout_centerInParent="true"
            android:text="3 days ago"
            android:textColor="@color/grey_500"
            android:textSize="18sp" />
    </RelativeLayout>


    <FrameLayout
        android:id="@+id/toolbarExpansionContainerID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/time_Stamp_linear">

        <TextView
            android:id="@+id/toolbarExpansionTextID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </FrameLayout>
</RelativeLayout>