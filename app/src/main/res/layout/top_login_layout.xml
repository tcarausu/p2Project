<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F79862">

        <RelativeLayout
            android:id="@+id/passAndUserMail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="30dp"
            android:gravity="center">

            <EditText
                android:id="@+id/email_id_logIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:drawableStart="@drawable/white_email_icone"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="@string/hint_email"
                android:inputType="textEmailAddress"
                android:minWidth="200dp"
                android:shadowColor="@android:color/holo_red_dark"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textColorHighlight="@android:color/darker_gray"
                android:textColorHint="@color/hints"
                android:textSize="16sp"
                app:backgroundTint="@color/colorEditTextUnderline" />

            <EditText
                android:id="@+id/password_id_logIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email_id_logIn"
                android:layout_gravity="center"
                android:backgroundTint="@color/white"
                android:drawableStart="@drawable/white_lock_closed"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="@string/hint_password"
                android:inputType="textPassword"
                android:minWidth="200dp"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textColorHighlight="@android:color/darker_gray"
                android:textColorHint="@color/hints"
                android:textSize="16sp" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/normal_login_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/passAndUserMail"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center">

            <Button
                android:id="@+id/button_id_logIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/input_fields_white_borders"
                android:drawableEnd="@drawable/log_in_icon_small"
                android:drawablePadding="10dp"
                android:fontFamily="@font/arbutus"
                android:onClick="onClick"
                android:paddingStart="15dp"
                android:shadowDx="5"
                android:shadowColor="@color/black"
                android:shadowRadius="5"
                android:paddingEnd="5dp"
                android:text="@string/btn_log_in"
                android:textAllCaps="false"
                android:textColor="@color/orangeMainTheme"
                android:textAlignment="textEnd"
                android:textSize="18sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/normal_login_layout"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center">

            <TextView
                android:id="@+id/textView_id_forgotPass_logIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:onClick="onClick"
                android:text="@string/hint_forgot_password"
                android:drawableBottom="@drawable/dash_icon_white"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="italic" />

        </RelativeLayout>

    </RelativeLayout>

</merge>