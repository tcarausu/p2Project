<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/back3"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_weight=".3"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ImageView
            android:src="@drawable/chefood"
            android:id="@+id/EditPost_postImage"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>



    <RelativeLayout
      android:layout_marginTop="10dp"
        android:layout_weight=".2"
        android:background="@color/grey"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <EditText
            android:id="@+id/EditPost_descriptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_weight=".2"
        android:layout_marginTop="10dp"
        android:background="@color/grey"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <EditText
        android:id="@+id/EditPost_ingrdients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_weight=".2"
        android:layout_marginTop="10dp"
        android:background="@color/grey"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <EditText
        android:id="@+id/EditPost_recipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_weight=".1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/EditPost_floating_b"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:src="@drawable/simo_designed_check"

            android:layout_height="wrap_content" />

    </RelativeLayout>


</LinearLayout>