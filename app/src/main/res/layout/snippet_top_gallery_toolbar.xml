<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/border_color_top">

        <Toolbar
            android:background="@drawable/back3"
            android:id="@+id/profileToolBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:animateLayoutChanges="true"
                    android:id="@+id/close_share"
                    android:background="@drawable/input_fields_round"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="20dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="onClick"
                    android:src="@drawable/cancel_grey" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:clickable="true"
                    android:focusable="true"
                    android:animateLayoutChanges="true"
                    android:id="@+id/profile_photo_SelectPicFrgmnt"
                    android:layout_centerInParent="true"
                    android:src="@drawable/my_avatar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:animateLayoutChanges="true"
                    android:layout_height="wrap_content"
                    android:text="@string/next"
                    android:fontFamily="@font/arbutus"
                    android:background="@drawable/input_fields_round"
                    android:layout_alignParentEnd="true"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginEnd="15dp"
                    android:textSize="20sp"
                    android:textColor="@color/grey"
                    android:shadowRadius="10"
                    android:shadowDx="5"
                    android:shadowColor="@color/black"
                    android:padding="8dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/textview_next"/>


            </RelativeLayout>

        </Toolbar>

    </android.support.design.widget.AppBarLayout>

</merge>