<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/border_color_top">

        <Toolbar
            android:id="@+id/profileToolBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:clickable="true"
                    android:focusable="true"
                    android:id="@+id/circular"
                    android:src="@drawable/my_avatar"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:background="@drawable/input_fields_with_shadow"
                    android:id="@+id/close_share"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="20dp"
                    android:onClick="onClick"
                    android:src="@drawable/orange_cancel" />


                <TextView
                    android:background="@drawable/input_fields_with_shadow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/next"
                    android:layout_alignParentEnd="true"
                    android:padding="5dp"
                    android:layout_marginEnd="15dp"
                    android:textSize="16dp"
                    android:textColor="@color/orange"
                    android:layout_centerVertical="true"
                    android:id="@+id/textview_next"/>


            </RelativeLayout>

        </Toolbar>

    </android.support.design.widget.AppBarLayout>

</merge>